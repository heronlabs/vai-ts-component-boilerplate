{
  "name": "my-project",
  "version": "0.0.1",
  "description": "Project created to serve as a boilerplate for components projects.",
  "license": "MIT",
  "main": "bin/entry-point.js",
  "module": "bin/entry-point.es.js",
  "files": [
    "bin"
  ],
  "type": "module",
  "scripts": {
